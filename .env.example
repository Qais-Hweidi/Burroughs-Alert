# Database
DATABASE_URL=./data/app.db

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Scraping Configuration
SCRAPING_INTERVAL=1800000  # 30 minutes in milliseconds (30 * 60 * 1000)
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
SCRAPER_MAX_MINUTES=60
SCRAPER_ENHANCED_MODE=true
SCRAPER_SAVE_TO_DB=true

# Job System Configuration
CLEANUP_INTERVAL=86400000  # 24 hours in milliseconds
HEALTH_CHECK_INTERVAL=300000  # 5 minutes in milliseconds
ENABLE_HEALTH_CHECKS=true
ENABLE_AUTO_CLEANUP=true

# Job System Startup Control
DISABLE_BACKGROUND_JOBS=false         # Set to 'true' to completely disable job system
ENABLE_BACKGROUND_JOBS_DEV=false     # Set to 'true' to enable job system in development

# Matcher Job Configuration
MATCHER_MAX_HOURS=1
MATCHER_GENERATE_NOTIFICATIONS=true

# Cleanup Job Configuration
CLEANUP_LISTING_RETENTION_DAYS=30
CLEANUP_NOTIFICATION_RETENTION_DAYS=90
CLEANUP_TOKEN_RETENTION_DAYS=30
CLEANUP_INACTIVE_ALERT_MONTHS=6
CLEANUP_OPTIMIZE_DATABASE=true

# AI Services
MISTRAL_API_KEY=your-mistral-api-key-here

# Google Services (optional for commute calculations)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here  # Frontend access for Places Autocomplete
GOOGLE_MAPS_CACHE_TTL=86400  # 24 hours in seconds

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Security
JWT_SECRET=your-jwt-secret-for-unsubscribe-tokens